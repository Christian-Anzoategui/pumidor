<% include ../partials/header %>
	<h1>Pumidor Types>:
	<% if(authdata != null) {%>
		<a href="/types/add" class="btn btn-success pull-right"> Add Type>:</a>
	<% } else {%>
	<% } %>
	</h1>

	<table class="table table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
			<% for(var i=0; i< types.length; i++) { %>
				<tr>
					<td><%= types[i].name %></td>
					<td>
						<% if(authdata != null) {%>
						<a href="/types/edit/<%= types[i].id %>"
						class="btn btn-default">Edit</a>

						<a data-id="<%= types[i].id %>" class="btn btn-danger delete-type">Delete</a>
						<% } else {%>
						<% } %>
					</td>
				</tr>
			<% } %>
		</tbody>
	</table>

<% include ../partials/footer %>